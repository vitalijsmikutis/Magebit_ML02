<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">magebit_faq_form.magebit_faq_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magebit\Faq\Block\Adminhtml\Faq\Edit\SaveButton" />
            <button name="back" class="Magebit\Faq\Block\Adminhtml\Faq\Edit\BackButton" />
        </buttons>
        <namespace>magebit_faq_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>magebit_faq_form.magebit_faq_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="magebit_faq_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="magebit_faq/faq/save" />
        </settings>
        <dataProvider class="Magebit\Faq\Ui\Faq\DataProvider"
            name="magebit_faq_form_data_source">
            <settings>
                <requestFieldName>faq_id</requestFieldName>
                <primaryFieldName>faq_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">

        <settings>
            <label translate="true">General Information</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <!-- FAQ ID - Hidden Field -->
        <field name="faq_id" sortOrder="1" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">faq</item>
                </item>
            </argument>
            <settings>
                <dataScope>faq_id</dataScope>
                <dataType>int</dataType>
                <label translate="true">FAQ ID</label>
                <visible>false</visible>
            </settings>
        </field>
        <!-- Status Field with Source -->
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">faq</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Faq</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <!-- Question Field -->
        <field name="question" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">faq</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Question</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <!-- Answer Field -->
        <field name="answer" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">faq</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Answer</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <!-- Position Field (Hidden) -->
        <field name="position" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">faq</item>
                    <item name="default" xsi:type="number">1</item> <!-- Set default value to 1 -->
                </item>
            </argument>
            <settings>
                <dataScope>position</dataScope>
                <dataType>int</dataType>
                <visible>false</visible>
            </settings>
        </field>

    </fieldset>
</form>
