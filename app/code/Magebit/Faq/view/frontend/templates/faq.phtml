?>
<div
    id="element"
    data-mage-init='{
        "accordion": {
            "openedState": "active",
            "collapsible": true,
            "active": false,
            "multipleCollapsible": true
        }
    }'
    class="question table">

    <?php if (!empty($faqList)): ?>
        <div class="accordion">
            <?php foreach ($faqList as $faq): ?>
                <div class="accordion-item" data-role="collapsible">
                    <div class="accordion-header" data-role="trigger"
                         style="background-color: lightgray; padding: 10px;">
                        <strong class="accordion-title"><?= $this->escapeHtml($faq->getQuestion()); ?></strong>
                    </div>
                    <div class="accordion-content" data-role="content" style="padding: 10px;">
                        <p><?= $this->escapeHtml($faq->getAnswer()); ?></p>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
    <?php else: ?>
        <p><?= __('No FAQs available.'); ?></p>
    <?php endif; ?>
</div>

<script>
    require([
        'jquery',
        'mage/accordion'
    ], function ($) {
        $('#element').accordion({
            openedState: 'active',
            collapsible: true,
            active: false,
            multipleCollapsible: true
        });
    });
</script>
